# OpenRouter Alternative Chat Interface - Environment Variables
# Copy this file to .env.local and fill in your values

# OpenRouter API Configuration
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter API Base URL (usually doesn't need to be changed)
OPENROUTER_API_URL=https://openrouter.ai/api/v1

# Application Configuration
# Set to 'development' for dev mode, 'production' for production
NODE_ENV=development

# Next.js Configuration
# The base URL of your application (used for API calls)
NEXTAUTH_URL=http://localhost:3000

# Security
# A random string used to hash tokens, passwords and for other security purposes
NEXTAUTH_SECRET=your_nextauth_secret_here

# Optional: Custom API endpoint for your own OpenRouter alternative
# If you're running your own OpenRouter-compatible API
CUSTOM_API_URL=https://api.beta.caldronflex.com.np/public

# Optional: Default model to use when the app starts
DEFAULT_MODEL=openai/gpt-3.5-turbo

# Optional: Maximum number of conversations to store locally
MAX_CONVERSATIONS=50

# Optional: Default chat parameters
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2048
DEFAULT_TOP_P=1.0

# Optional: Enable/disable features
ENABLE_MODEL_SWITCHING=true
ENABLE_PARAMETER_CONTROLS=true
ENABLE_CONVERSATION_EXPORT=true

# Optional: Analytics and monitoring
ANALYTICS_ENABLED=false
ANALYTICS_ID=your_analytics_id_here

# Optional: Error reporting
SENTRY_DSN=your_sentry_dsn_here

# Optional: Rate limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Development only
# Set to true to enable debug logging
DEBUG=false

# Set to true to enable verbose API logging
VERBOSE_LOGGING=false
